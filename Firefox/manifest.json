{
  "manifest_version": 3,
  "name": "PlanMyTimetable Capture",
  "description": "Capture timetable data to use on PlanMyTimetable.",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "Capture@PlanMyTimetable.org",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    {
      "resources": ["bookmarklet.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-greyed.svg",
      "48": "images/icon-greyed.svg",
      "96": "images/icon-greyed.svg",
      "128": "images/icon-greyed.svg",
      "256": "images/icon-greyed.svg"
    }
  },
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "96": "images/icon.svg",
    "128": "images/icon.svg",
    "256": "images/icon.svg"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
