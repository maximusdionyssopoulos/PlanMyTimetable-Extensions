{
  "manifest_version": 3,
  "name": "PlanMyTimetable Capture",
  "description": "Capture timetable data to use on PlanMyTimetable.",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["bookmarklet.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-greyed.png",
      "48": "images/icon-greyed48.png",
      "128": "images/icon-greyed128.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
